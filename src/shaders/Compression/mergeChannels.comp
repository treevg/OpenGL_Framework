#version 430
layout ( binding = 0, r32f ) readonly uniform image2D inImg;
layout ( binding = 1, rgba32f ) writeonly uniform image2D outImg;

layout (local_size_x = 8, local_size_y = 8) in;
void main() {

	ivec2 index = ivec2 (gl_GlobalInvocationID.xy);
	
	vec4 texel_color = imageLoad(inImg, index);
	
	imageStore(outImg, index, vec4(texel_color.r, texel_color.r, texel_color.r, 0));
	
}