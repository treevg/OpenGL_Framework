#version 430

layout (location = 0) in vec4 vertex_modelSpace;

uniform mat4 uniformModel;
uniform mat4 uniformView;
uniform mat4 uniformProjection;


out vec4 passPosition;


void main() {
	passPosition = vec4(vertex_modelSpace.xyz*scale,1.0) ;
        gl_Position =  uniformProjection *  uniformView * uniformModel * vec4(vertex_modelSpace.xyz*scale,1.0);
   
}
